{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug build eLua",
            "type": "lua",
            "request": "launch",
            "workingDirectory": "${workspaceRoot}",
            "sourceBasePath": "${workspaceRoot}",
            "executable": "lua5.1",
            "arguments": "build_elua.lua BOARD=bonfire_arty debug=false config_only=true",
            "listenPublicly": false,
            "listenPort": 56789,
            "encoding": "UTF-8",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {}
        },
        {
            "name": "Bonfire Remote Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/elua_lua_bonfire_arty.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "logging": {
                "trace": false
            },
            
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerServerAddress":"/dev/ttyUSB2",
            "miDebuggerPath": "riscv64-unknown-elf-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "set Architecture",
                    "text": "set arch riscv:rv32",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Bonfire Papilio Pro Remote Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/elua_lua_bonfire_papilio_pro.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "logging": {
                "trace": false
            },
            
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerServerAddress":"/dev/ttyUSB2",
            "miDebuggerPath": "riscv64-unknown-elf-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "set Architecture",
                    "text": "set arch riscv:rv32",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}